<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_quiz_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bt_submit_survey_fragment"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_empty_quiz_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/survey_empty"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/bt_submit_survey_fragment"
        style="@style/ThemeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorGray_A6A6A6"
        android:layout_margin="12dp"
        android:text="@string/quiz_submit"
        android:enabled="false"/>

</RelativeLayout>