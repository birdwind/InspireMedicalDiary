<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main_question_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_question_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange_FAF1E7"
        android:padding="12dp" />

    <ImageView
        android:id="@+id/iv_picture_question_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_question_item"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/ll_question_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_picture_question_item"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibtn_record_video_question_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/ic_circle"
            android:src="@drawable/ic_video" />

        <ImageButton
            android:id="@+id/ibtn_play_video_question_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginVertical="12dp"
            android:alpha="0.3"
            android:background="@drawable/ic_circle"
            android:src="@drawable/ic_play" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_preview_question_item"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/iv_picture_question_item"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_preview_question_item"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="12dp"
            android:background="@color/colorBlack_000000"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:src="@drawable/lb_ic_play"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

</RelativeLayout>