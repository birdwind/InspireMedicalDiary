<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="12dp">

    <ImageView
        android:id="@+id/iv_check_survey_item"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check_circle"
        android:layout_alignTop="@id/tv_name_survey_item"
        android:layout_alignBottom="@id/tv_name_survey_item"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/tv_name_survey_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toEndOf="@id/iv_check_survey_item"/>

</RelativeLayout>