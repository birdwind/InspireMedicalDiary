<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="15dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civ_image_patient_item"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        android:src="@drawable/ic_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/civ_image_patient_item"
        android:layout_alignEnd="@id/civ_image_patient_item"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_unread_patient_item"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/ic_circle"
            app:tint="@color/colorBlue_67BCFF" />

        <ImageView
            android:id="@+id/iv_report_patient_item"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_circle"
            app:tint="@color/colorRed_B70908" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_name_patient_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/civ_image_patient_item"
        android:layout_centerHorizontal="true"
        android:text="患者1"
        android:textSize="16sp" />

</RelativeLayout>