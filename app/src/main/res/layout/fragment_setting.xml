                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignEnd="@id/civ_avatar_setting_fragment"
                android:layout_alignBottom="@id/civ_avatar_setting_fragment"
                android:alpha="0.8"
                android:background="@drawable/ic_circle"
                android:backgroundTint="@color/colorGray_E7E9EC"
                android:paddingStart="2.5dp"
                android:src="@drawable/ic_edit" />

            <TextView
                android:id="@+id/tv_name_setting_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/civ_avatar_setting_fragment"
                android:text="@string/setting_basic_info_name" />

            <TextView
                android:id="@+id/tv_identity_setting_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_border_radius_3dp_a6a6a6"
                android:backgroundTint="@color/colorGray_F2F2F2"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:text="@string/setting_basic_info_family"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            style="@style/UnderLine"
            android:background="@color/colorGray_E7E9EC" />


