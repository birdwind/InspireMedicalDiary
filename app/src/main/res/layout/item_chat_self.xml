<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_right_chat_self_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_self_message_right" />

    <TextView
        android:id="@+id/tv_message_chat_self_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iv_right_chat_self_item"
        android:background="@drawable/background_board_radius_5dp"
        android:backgroundTint="@color/colorGray_F3F3F3"
        android:paddingHorizontal="18dp"
        android:paddingVertical="17dp"
        android:layout_marginEnd="-2dp"/>

</RelativeLayout>