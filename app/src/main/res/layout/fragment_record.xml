<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_description_record_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="描述問題文字" />

    <ImageView
        android:id="@+id/iv_image_record_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_record_record_fragment"
        android:layout_below="@id/tv_description_record_fragment"
        android:layout_gravity="center"
        android:background="@drawable/background_board_radius_8dp"
        android:backgroundTint="@color/colorGray_F3F3F3"
        android:scaleType="centerInside"
        android:src="@drawable/ic_default_image"
        android:layout_marginVertical="12dp"/>

    <LinearLayout
        android:id="@+id/ll_record_record_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ib_record_record_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_circle"
            android:padding="12dp"
            android:src="@drawable/ic_record" />

    </LinearLayout>


</RelativeLayout>