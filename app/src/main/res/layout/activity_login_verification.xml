<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_logo_login_verification_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27dp"
            android:src="@drawable/ic_logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo_text" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_logo_login_verification_activity">

        <LinearLayout
            android:id="@+id/ll_main_login_verification_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/background_board_radius_5dp"
                android:backgroundTint="@color/colorGray_F3F3F3"
                android:gravity="center_vertical"
                android:minWidth="305dp"
                android:minHeight="55dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="@string/login_name" />

                <EditText
                    android:id="@+id/et_name_login_verification_activity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:background="@null"
                    android:hint="@string/login_name_hint"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack_333333" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_board_radius_5dp"
                android:backgroundTint="@color/colorGray_F3F3F3"
                android:gravity="center_vertical"
                android:minWidth="305dp"
                android:minHeight="55dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="@string/login_verification_code" />

                <EditText
                    android:id="@+id/et_verification_code_login_verification_activity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:background="@null"
                    android:hint="@string/login_verification_code_hint"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack_333333" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_send_verification_code_login_verification_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="32dp"
                android:background="@null"
                android:text="@string/login_send_verification_code"
                android:textColor="@color/colorBlue_009CB2"
                android:textSize="18sp" />


            <Button
                android:id="@+id/bt_verify_login_verification_activity"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_double_green"
                android:text="@string/login_verification"
                android:textColor="@color/colorWhite_FFFFFF" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>